<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Andre Carlucci</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>di, aspnetcore, dependencyinjection, inversionofcontrol, autoregister</PackageTags>
    <Description>Simple way to auto-register interfaces to their implementations with asp.net core default dependency injection.</Description>
    <PackageProjectUrl>https://github.com/SharpTools/SharpDiAutoRegister</PackageProjectUrl>
    <PackageIconUrl></PackageIconUrl>
    <PackageLicenseUrl>https://github.com/SharpTools/SharpDiAutoRegister/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/SharpTools/SharpDiAutoRegister.git</RepositoryUrl>
    <Version>1.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.0.0" />
    <PackageReference Include="SimpleInjector" Version="4.0.12" />
  </ItemGroup>

</Project>
